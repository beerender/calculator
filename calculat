import java.util.*;
public class HelloWorld{

     public static void main(String []args){
        Scanner sc=new Scanner(System.in);
        int no1=sc.nextInt();
        int no2=sc.nextInt();
        long ans=0;//1.changed int to long
        System.out.println("Enter operator");
        char ch=sc.next().charAt(0);
        switch(ch){
            case '+': ans=addition(no1,no2);
                        System.out.println(ans);
                        break;
            case '-': ans=substraction(no1,no2);
                         System.out.println(ans);
                        break;
            case '*': ans=multiply(no1,no2);
                         System.out.println(ans);
                        break;
            case '/': ans=divide(no1,no2);
                         System.out.println(ans);
                        break;
            default: System.out.println("Enter valid sign");
                        break;
     }
     
    }
    public static long addition(int no1,int no2)//1.changed function type
    {
        return no1+no2;
    }
    public static long substraction(int no1,int no2)//1.changed function type
    {
        return no1-no2;
    }
    public static long divide(int no1,int no2)//1.changed function type
    {
        try{        //0.exception handling
        int ans=no1/no2;
        return ans;
        }
         catch(Exception e){
         System.out.println(e);
         }
         return -1;
      }
    public static long multiply(int no1,int no2)//1.changed function type
    {
        return no1*no2;
    }
}
